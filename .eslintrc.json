{
    "parserOptions": {
        "ecmaVersion": 7,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "plugins": [
        "react",
        "react-native"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "env": {
        "browser": true
    },
    "rules": {
        "comma-dangle": 0,
        "react-native/no-unused-styles": 2,
        "react-native/split-platform-components": 2
    },
    "settings": {
        "react": {
            "pragma": "React",
            "version": "16.3.1"
        }
    }
}